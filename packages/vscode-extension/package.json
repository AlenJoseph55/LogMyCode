{
  "name": "logmycode",
  "displayName": "LogMyCode",
  "publisher": "Alen",
  "icon": "icon.png",
  "description": "Automatically generates daily work summaries from your git commits and exports them for standups, Excel reports, and Jira updates.",
  "version": "2.0.0",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "logmycode.showDailySummary",
        "title": "Show Daily Summary"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "LogMyCode",
      "properties": {
        "logmycode.apiUrl": {
          "type": "string",
          "default": "http://localhost:4001/api",
          "description": "Base URL for the LogMyCode API"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "build": "pnpm run compile",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "globals": "^17.1.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}
